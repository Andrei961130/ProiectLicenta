<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pulseoximeter2021">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PulseOximeter2021">
        <activity android:name=".AddPatient.AddPatientActivity"></activity>
        <activity android:name=".LinkedPacients.LinkedPacientsActivity" />
        <activity android:name=".Records.RecordViewActivity" />
        <activity android:name=".Profile.ProfileActivity" />
        <activity android:name=".Records.RecordsActivity" />
        <activity android:name=".Measure.MeasureActivity" />
        <activity android:name=".MainScreen.MainActivity" />
        <activity android:name=".Authenticate.AuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>