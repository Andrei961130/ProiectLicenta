<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen.StartingFragment">

    <ImageView
        android:id="@+id/imageView_starting"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_medicine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_measurement_time"
        android:layout_marginStart="54dp"
        android:layout_marginTop="20dp"
        android:text="Select measurement time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_starting" />


    <Button
        android:id="@+id/fragment_starting_btn_measure"
        style="?android:attr/button"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:text="Measure"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/round_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>