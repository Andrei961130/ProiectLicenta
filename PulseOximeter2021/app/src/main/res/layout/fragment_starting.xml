<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen.StartingFragment">

    <RadioGroup
        android:id="@+id/fragment_starting_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/fragment_starting_rb_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:checked="true"
            android:paddingStart="10dp"
            android:paddingEnd="40dp"
            android:text="10"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/fragment_starting_rb_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:checked="false"
            android:paddingStart="40dp"
            android:paddingEnd="10dp"
            android:text="15"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/fragment_starting_rb_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:checked="false"
            android:paddingStart="40dp"
            android:paddingEnd="10dp"
            android:text="20"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </RadioGroup>

    <Button
        android:id="@+id/fragment_starting_btn_measure"
        style="?android:attr/button"
        android:layout_width="237dp"
        android:layout_height="46dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:text="Measure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_starting_radio_group" />

</androidx.constraintlayout.widget.ConstraintLayout>