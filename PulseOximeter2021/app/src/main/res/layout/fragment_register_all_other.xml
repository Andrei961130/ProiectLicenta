<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authenticate.RegisterAllOtherFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fragment_register_et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="36dp"
            android:hint="First Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/fragment_register_et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:hint="Last Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/fragment_register_et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:hint="Phone Number"
            android:inputType="phone" />

        <RadioGroup
            android:id="@+id/fragment_register_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RadioButton
                android:id="@+id/fragment_register_rb_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:checked="true"
                android:drawableRight="@drawable/ic_gender_male_foreground"
                android:text="Male"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:paddingEnd="40dp"/>

            <RadioButton
                android:id="@+id/fragment_register_rb_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:drawableRight="@drawable/ic_gender_female_foreground"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Female"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/fragment_register_et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_date_foreground"
            android:hint=" Birthday"
            android:ems="10"
            android:inputType="date"
            android:focusable="false"/>

        <Button
            android:id="@+id/fragment_register_all_btn_continue"
            style="?android:attr/button"
            android:layout_width="237dp"
            android:layout_height="46dp"
            android:layout_marginTop="36dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="That's it"/>

    </LinearLayout>
</ScrollView>