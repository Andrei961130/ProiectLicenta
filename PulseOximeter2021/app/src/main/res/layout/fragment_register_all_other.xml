<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authenticate.RegisterAllOtherFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_detailed_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fragment_register_et_first_name"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_txt_username"
            android:fontFamily="@font/montserrat_semibold"
            android:hint="First Name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fragment_register_et_last_name"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_txt_username"
            android:fontFamily="@font/montserrat_semibold"
            android:hint="Last Name"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:textSize="14sp"
            android:inputType="text" />

        <EditText
            android:id="@+id/fragment_register_et_phone_number"
            android:layout_width="300dp"
            android:layout_height="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_txt_username"
            android:fontFamily="@font/montserrat_semibold"
            android:hint="Phone Number"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:textSize="14sp"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="250dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RadioGroup
            android:id="@+id/fragment_register_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RadioButton
                android:id="@+id/fragment_register_rb_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:checked="true"
                android:drawableRight="@drawable/ic_gender_male_foreground"
                android:text="Male"
                android:textSize="14dp"
                android:paddingStart="10dp"
                android:layout_marginEnd="10dp"/>

            <RadioButton
                android:id="@+id/fragment_register_rb_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:drawableRight="@drawable/ic_gender_female_foreground"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Female"
                android:paddingEnd="10dp"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/fragment_register_et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_date_foreground"
            android:hint="Birthday"
            android:ems="10"
            android:inputType="date"
            android:focusable="false"/>

        <Button
            android:id="@+id/fragment_register_all_btn_continue"

            android:layout_width="237dp"
            android:layout_height="46dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/round_corners"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue_main"
            android:text="That's it"/>

    </LinearLayout>
</ScrollView>